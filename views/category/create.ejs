<%- include('../partials/header.ejs'); %>
<%- include('../partials/navbarAdmin.ejs'); %> 
    <div class="container mt-1 mb-1" style="height: 98vh;">
        <div class="card">
            <div class="card-header">
                <h3>Nova Categoria</h3>
            </div>
            <div class="card-body">
                <form action="/admin/category/create" method="POST">
                    <label for="name">Nome</label>
                    <input oninput="validate(this)" type="text" class="form-control is-invalid" id="name" placeholder="ex: Eletronico" name="name" required>
                    <hr>
                    <div class="mt-1">
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                        <!-- modal Button -->
                        <button type="button" class="btn btn-danger " data-toggle="modal"
                            data-target="#modalExemploCancel">
                            Cancelar
                        </button>
                    </div>
                </form>
                <!-- modal -->
                <div class="modal fade" id="modalExemploCancel" tabindex="-1" role="dialog"
                    aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Alerta do Sistema
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Deseja Cancelar este Cadastro?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">NÃ£o</button>
                                <a class="btn btn-danger" href="/admin/category">Sim</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="/scripts/validate.js"></script>
    <%- include('../partials/footer.ejs'); %>